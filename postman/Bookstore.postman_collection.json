			"event": [
				{
					"listen": "prerequest",
					"script": {
						"type": "text/javascript",
						"packages": {},
						"exec": [
							"const postRequest = {\r",
							"  url: pm.environment.get(\"keycloak_server\") + '/realms/'+ pm.environment.get(\"realm_name\") + '/protocol/openid-connect/token',\r",
							"  method: 'POST',\r",
							"  timeout: 0,\r",
							"  header: {\r",
							"    \"Content-Type\": \"application/x-www-form-urlencoded\"\r",
							"  },\r",
							"  body: {\r",
							"    mode: 'urlencoded',\r",
							"    urlencoded: [\r",
							"        {key: \"grant_type\", value: \"password\"},\r",
							"        {key:\"client_id\", value: pm.environment.get(\"client_id\")},\r",
							"        {key:\"username\", value: pm.environment.get(\"user_username\")},\r",
							"        {key:\"password\", value: pm.environment.get(\"user_password\")},\r",
							"    ]}\r",
							"};\r",
							"pm.sendRequest(postRequest, function (err, res) {\r",
							"    var responseJson = res.json();\r",
							"    pm.environment.set('access_token', responseJson['access_token']);\r",
							"});"
						]
					}
				},
